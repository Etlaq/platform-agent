{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "target": "ES2022",
    "module": "ES2022",
    "types": ["node"],
    "paths": {
      "~encore/*": ["./encore.gen/*"]
    },
    "composite": true,
    "strict": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "sourceMap": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "auth/**/*.ts",
    "control/**/*.ts",
    "data/**/*.ts",
    "download/**/*.ts",
    "metrics/**/*.ts",
    "runs/**/*.ts",
    "sandbox/**/*.ts",
    "storage/**/*.ts",
    "worker/**/*.ts",
    "common/**/*.ts",
    "agent/**/*.ts"
  ]
}
