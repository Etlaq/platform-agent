'use client'

import { useLanguage } from '@/contexts/LanguageContext'
import { stats } from '@/lib/data'
import { cn } from '@/lib/utils'

/* ═══════════════════════════════════════════════════════════════════════
   STATS BAR — Trust / social proof strip
   ═══════════════════════════════════════════════════════════════════════ */

export function StatsBar() {
  const { isArabic } = useLanguage()

  return (
    <section className="py-12 px-6 bg-ivory border-y border-sand-200">
      <div className="mx-auto max-w-6xl">
        <div className="grid grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-0">
          {stats.map((stat, index) => {
            const isLast = index === stats.length - 1

            return (
              <div
                key={index}
                className={cn(
                  'text-center',
                  /* Vertical divider between stats on desktop (except last) */
                  !isLast && 'lg:border-e lg:border-sand-200'
                )}
              >
                {/* Value */}
                <div className="text-3xl md:text-4xl font-bold text-gradient-gold">
                  {isArabic ? stat.valueAr : stat.valueEn}
                </div>

                {/* Label */}
                <p className="text-sm text-sand-500 mt-1">
                  {isArabic ? stat.labelAr : stat.labelEn}
                </p>
              </div>
            )
          })}
        </div>
      </div>
    </section>
  )
}
