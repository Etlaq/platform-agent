'use client'

import { useEffect } from 'react'
import { X, Minus, Plus, ShoppingBag } from 'lucide-react'
import { useCart } from '@/contexts/CartContext'
import { useLanguage } from '@/contexts/LanguageContext'
import { cn, formatPrice, formatPriceEn } from '@/lib/utils'

export function CartDrawer() {
  const { items, removeItem, updateQuantity, totalPrice, isCartOpen, setIsCartOpen } = useCart()
  const { isArabic, t } = useLanguage()

  // Lock body scroll when drawer is open
  useEffect(() => {
    if (isCartOpen) {
      document.body.style.overflow = 'hidden'
    } else {
      document.body.style.overflow = ''
    }
    return () => {
      document.body.style.overflow = ''
    }
  }, [isCartOpen])

  const displayPrice = (price: number) =>
    isArabic ? formatPrice(price) : formatPriceEn(price)

  return (
    <>
      {/* Backdrop overlay */}
      <div
        className={cn(
          'fixed inset-0 z-40 bg-espresso-900/40 backdrop-blur-sm transition-opacity duration-300',
          isCartOpen ? 'opacity-100' : 'pointer-events-none opacity-0'
        )}
        onClick={() => setIsCartOpen(false)}
        aria-hidden="true"
      />

      {/* Drawer panel */}
      <aside
        role="dialog"
        aria-modal="true"
        aria-label={t('nav.cart')}
        className={cn(
          'fixed inset-y-0 end-0 z-50 flex w-full max-w-md flex-col bg-cream shadow-2xl transition-transform duration-300 ease-out',
          isCartOpen ? 'translate-x-0' : 'ltr:translate-x-full rtl:-translate-x-full'
        )}
      >
        {/* Header */}
        <div className="flex items-center justify-between border-b border-sand-200 px-6 py-5">
          <h2 className="font-[family-name:var(--font-display)] text-xl font-bold text-espresso-900">
            {t('nav.cart')}
          </h2>
          <button
            onClick={() => setIsCartOpen(false)}
            className="flex h-11 w-11 items-center justify-center rounded-full text-espresso-600 transition-colors hover:bg-sand-100 hover:text-espresso-900"
            aria-label="Close cart"
          >
            <X className="h-5 w-5" />
          </button>
        </div>

        {/* Cart content */}
        {items.length === 0 ? (
          /* Empty state */
          <div className="flex flex-1 flex-col items-center justify-center gap-4 px-6">
            <div className="flex h-24 w-24 items-center justify-center rounded-full bg-sand-100">
              <ShoppingBag className="h-10 w-10 text-sand-400" />
            </div>
            <p className="text-lg font-medium text-espresso-700">
              {isArabic ? 'سلتك فارغة' : 'Your cart is empty'}
            </p>
            <p className="text-center text-sm text-espresso-600">
              {isArabic
                ? 'أضف بعض التمور الفاخرة لسلتك'
                : 'Add some premium dates to your cart'}
            </p>
            <button
              onClick={() => setIsCartOpen(false)}
              className="mt-2 rounded-full bg-espresso-900 px-8 py-3 text-sm font-medium text-cream transition-colors hover:bg-espresso-800"
            >
              {isArabic ? 'تصفح المتجر' : 'Browse Shop'}
            </button>
          </div>
        ) : (
          <>
            {/* Items list */}
            <div className="flex-1 overflow-y-auto px-6 py-4">
              <ul className="flex flex-col gap-4">
                {items.map((item) => (
                  <li
                    key={item.product.id}
                    className="flex gap-4 rounded-xl border border-sand-100 bg-white p-4 shadow-sm transition-shadow hover:shadow-md"
                  >
                    {/* Product image */}
                    <div className="h-20 w-20 flex-shrink-0 overflow-hidden rounded-lg bg-sand-100">
                      <img
                        src={item.product.image}
                        alt={isArabic ? item.product.nameAr : item.product.nameEn}
                        className="h-full w-full object-cover"
                      />
                    </div>

                    {/* Product details */}
                    <div className="flex flex-1 flex-col justify-between">
                      <div className="flex items-start justify-between gap-2">
                        <h3 className="text-sm font-semibold leading-tight text-espresso-900">
                          {isArabic ? item.product.nameAr : item.product.nameEn}
                        </h3>
                        <button
                          onClick={() => removeItem(item.product.id)}
                          className="flex h-7 w-7 flex-shrink-0 items-center justify-center rounded-full text-sand-400 transition-colors hover:bg-ruby/10 hover:text-ruby"
                          aria-label={isArabic ? 'إزالة المنتج' : 'Remove item'}
                        >
                          <X className="h-3.5 w-3.5" />
                        </button>
                      </div>

                      <div className="flex items-end justify-between">
                        {/* Quantity controls */}
                        <div className="flex items-center gap-1">
                          <button
                            onClick={() =>
                              updateQuantity(item.product.id, item.quantity - 1)
                            }
                            className="flex h-8 w-8 items-center justify-center rounded-full border border-sand-200 text-espresso-600 transition-colors hover:border-sand-400 hover:bg-sand-50"
                            aria-label={isArabic ? 'تقليل الكمية' : 'Decrease quantity'}
                          >
                            <Minus className="h-3.5 w-3.5" />
                          </button>
                          <span className="w-8 text-center text-sm font-semibold text-espresso-900">
                            {item.quantity}
                          </span>
                          <button
                            onClick={() =>
                              updateQuantity(item.product.id, item.quantity + 1)
                            }
                            className="flex h-8 w-8 items-center justify-center rounded-full border border-sand-200 text-espresso-600 transition-colors hover:border-sand-400 hover:bg-sand-50"
                            aria-label={isArabic ? 'زيادة الكمية' : 'Increase quantity'}
                          >
                            <Plus className="h-3.5 w-3.5" />
                          </button>
                        </div>

                        {/* Item total */}
                        <span className="text-sm font-bold text-amber-deep">
                          {displayPrice(item.product.price * item.quantity)}
                        </span>
                      </div>
                    </div>
                  </li>
                ))}
              </ul>
            </div>

            {/* Footer with total & checkout */}
            <div className="border-t border-sand-200 bg-white px-6 py-5">
              {/* Subtotal */}
              <div className="mb-4 flex items-center justify-between">
                <span className="text-sm text-espresso-600">
                  {isArabic ? 'المجموع' : 'Subtotal'}
                </span>
                <span className="text-lg font-bold text-espresso-900">
                  {displayPrice(totalPrice)}
                </span>
              </div>

              {/* Shipping note */}
              <p className="mb-4 text-center text-xs text-espresso-600">
                {isArabic
                  ? 'الشحن والضرائب تُحسب عند إتمام الشراء'
                  : 'Shipping and taxes calculated at checkout'}
              </p>

              {/* Checkout button */}
              <button className="flex h-12 w-full items-center justify-center rounded-full bg-amber-gold text-sm font-bold text-espresso-900 shadow-lg shadow-amber-gold/25 transition-all hover:bg-amber-deep hover:text-cream hover:shadow-xl hover:shadow-amber-deep/30 active:scale-[0.98]">
                {isArabic ? 'إتمام الشراء' : 'Checkout'}
              </button>

              {/* Continue shopping */}
              <button
                onClick={() => setIsCartOpen(false)}
                className="mt-3 flex h-11 w-full items-center justify-center rounded-full border border-sand-200 text-sm font-medium text-espresso-700 transition-colors hover:bg-sand-50"
              >
                {isArabic ? 'متابعة التسوق' : 'Continue Shopping'}
              </button>
            </div>
          </>
        )}
      </aside>
    </>
  )
}
